<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiBocata.Businnes.Features.LogIn.Templates.HelpYouView"
             x:Name="HelpYou">
  <ContentView.Content>
        <Grid
            ColumnDefinitions="auto,*"
            RowDefinitions="auto,auto"
            ColumnSpacing="6">
            <Image 
                Source="https://cdn.dribbble.com/users/1104048/screenshots/6509120/artboard_2.png" 
                Aspect="AspectFill" 
                HeightRequest="86" 
                WidthRequest="86"
                Grid.RowSpan="2"/>
            <Label 
                    Text="Need help? More information?" 
                    TextColor="Black" 
                FontFamily="SpaceMonoBold"
                Grid.Column="1"
                    FontSize="Large"/>
            <Label 
                    Text="We will be happy to assist you via phone or WhatsApp, click on this box" 
                    FontSize="12"
                Grid.Column="1"
                    Grid.Row="1"/>
        </Grid>
    </ContentView.Content>
</ContentView>