<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="MiBocata.Businnes.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MiBocata.Businnes"
    xmlns:stores="clr-namespace:MiBocata.Businnes.Features.Stores"
    xmlns:signIn="clr-namespace:MiBocata.Businnes.Features.LogIn"
    xmlns:register="clr-namespace:MiBocata.Businnes.Features.Registro"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Sign in"
        ContentTemplate="{DataTemplate signIn:LogInPage}"
        Route="LogInPage" />

    <ShellContent
        Title="Sign up"
        ContentTemplate="{DataTemplate register:RegisterPage}"
        Route="RegisterPage" />
    
    <ShellContent
        Title="Sign up"
        ContentTemplate="{DataTemplate stores:ChooseLocationPage}"
        Route="ChooseLocationPage" />
    
    <ShellContent
        Title="Sign up"
        ContentTemplate="{DataTemplate stores:CreateStorePage }"
        Route="CreateStorePage" />

</Shell>
