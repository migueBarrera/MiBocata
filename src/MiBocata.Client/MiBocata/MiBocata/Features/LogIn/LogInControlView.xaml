<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="MiBocata.Features.LogIn.LogInControlView"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentView.Content>
        <Grid>
            <StackLayout Margin="16">
                <Image
                    Margin="0,4,4,0"
                    Source="robotfoot.png"
                    WidthRequest="150" />
                <Label
                    FontAttributes="Bold"
                    FontSize="24"
                    HorizontalOptions="Center"
                    Text="¡Bienvenido!"
                    TextColor="Black" />
                <Entry Placeholder="Correo electrónico" Text="{Binding User.Email}" />
                <Entry
                    IsPassword="True"
                    Placeholder="Contraseña"
                    Text="{Binding User.Password}" />
                <Button
                    Margin="0,12,0,0"
                    Command="{Binding DoLoginCommand}"
                    Text="Inicia sesión" />

                <StackLayout
                    Margin="0,8,0,0"
                    HorizontalOptions="Center"
                    Orientation="Horizontal">
                    <Label Text="¿No tienes cuenta?" />
                    <Label Text="Regístrate" />
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToRegisterCommand}" NumberOfTapsRequired="1" />
                    </StackLayout.GestureRecognizers>
                </StackLayout>
            </StackLayout>

            <ActivityIndicator
                HorizontalOptions="Center"
                IsRunning="{Binding IsBusy}"
                IsVisible="{Binding IsBusy}"
                VerticalOptions="Center" />

        </Grid>

    </ContentView.Content>
</ContentView>